<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
     <%= f.label :name %><br />
     <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :birth %>
    <%= f.text_field :birth, autofocus: true, class: 'form-control' %>
  </div>
  <div class="btn-group" data-toggle="buttons">
    <p style="margin-bottom:0;"><%= f.label :gender %></p>
    <label class="radio_button"> 남자
       <%= f.radio_button :gender, '남자', checked: true %>
    </label>
    <label class="radio_button active"> 여자
       <%= f.radio_button :gender, '여자', checked: true %>
    </label>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
